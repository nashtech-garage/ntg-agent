@page "/agents/{id:guid}"
@attribute [Authorize]
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))
@using NTG.Agent.Admin.Client.Components
@using NTG.Agent.Shared.Dtos.Agents
@inject ILogger<AgentDetails> Logger
@inject AgentClient AgentClient
@inject TagClient TagClient
@inject NavigationManager Navigation

<PageTitle>Agent Details</PageTitle>

<div class="container-fluid px-2 px-md-4 py-2 py-md-3 agent-details">
    @if (isLoading)
    {
        <div class="d-flex justify-content-center align-items-center" style="min-height: 300px;">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (agentDetail == null)
    {
        <div class="alert alert-warning d-flex align-items-center" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <div>
                Agent not found. <a href="/agents" class="alert-link">Return to agents list</a>
            </div>
        </div>
    }
    else
    {
        <!-- Header Section -->
        <div class="row mb-2 mb-md-4">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Agents</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@agentDetail.Name</li>
                    </ol>
                </nav>
                
                <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between">
                    <div class="d-flex align-items-center mb-2 mb-md-0">
                        <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-2 me-md-3 agent-avatar" 
                             style="width: 40px; height: 40px;">
                            <i class="bi bi-robot text-white" style="font-size: 1.2rem;"></i>
                        </div>
                        <div>
                            <h1 class="h3 h-md-2 mb-1">@agentDetail.Name</h1>
                            <span class="badge bg-success">Active</span>
                        </div>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-md-normal btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            Actions
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#"><i class="bi bi-pencil me-2"></i>Edit Agent</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-copy me-2"></i>Duplicate Agent</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" href="#"><i class="bi bi-trash me-2"></i>Delete Agent</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <!-- Desktop Tab Navigation -->
                    <div class="card-header bg-white border-bottom d-none d-md-block">
                        <ul class="nav nav-tabs card-header-tabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link @(activeTab == settingsTab ? "active" : "") d-flex align-items-center" 
                                        @onclick="() => SetActiveTab(settingsTab)" 
                                        type="button" role="tab">
                                    <i class="bi bi-gear me-2"></i>
                                    Agent Settings
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link @(activeTab == documentsTab ? "active" : "") d-flex align-items-center" 
                                        @onclick="() => SetActiveTab(documentsTab)" 
                                        type="button" role="tab">
                                    <i class="bi bi-book me-2"></i>
                                    Knowledge Base
                                    <span class="badge bg-secondary ms-2">@documentCount</span>
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link @(activeTab == tagsManagementTab ? "active" : "") d-flex align-items-center"
                                        @onclick="() => SetActiveTab(tagsManagementTab)"
                                        type="button" role="tab">
                                    <i class="bi bi-tags me-2"></i>
                                    Tags Management
                                    <span class="badge bg-secondary ms-2">@tagCount</span>
                                </button>
                            </li>
                        </ul>
                    </div>

                    <!-- Mobile Tab Navigation -->
                    <div class="card-header bg-white border-bottom d-block d-md-none">
                        <div class="dropdown w-100">
                            <button class="btn btn-outline-primary dropdown-toggle w-100 d-flex align-items-center justify-content-between mobile-tab-dropdown"
                                    type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="d-flex align-items-center">
                                    @if (activeTab == settingsTab)
                                    {
                                        <i class="bi bi-gear me-2"></i>
                                        <span>Agent Settings</span>
                                    }
                                    else if (activeTab == documentsTab)
                                    {
                                        <i class="bi bi-book me-2"></i>
                                        <span>Knowledge Base</span>
                                        <span class="badge bg-secondary ms-2">@documentCount</span>
                                    }
                                    else if (activeTab == tagsManagementTab)
                                    {
                                        <i class="bi bi-tags me-2"></i>
                                        <span>Tags Management</span>
                                        <span class="badge bg-secondary ms-2">@tagCount</span>
                                    }
                                </span>
                            </button>
                            <ul class="dropdown-menu w-100">
                                <li>
                                    <button class="dropdown-item @(activeTab == settingsTab ? "active" : "")"
                                            @onclick="() => SetActiveTab(settingsTab)" type="button">
                                        <i class="bi bi-gear me-2"></i>
                                        Agent Settings
                                    </button>
                                </li>
                                <li>
                                    <button class="dropdown-item @(activeTab == documentsTab ? "active" : "")"
                                            @onclick="() => SetActiveTab(documentsTab)" type="button">
                                        <i class="bi bi-book me-2"></i>
                                        Knowledge Base
                                        <span class="badge bg-secondary ms-2">@documentCount</span>
                                    </button>
                                </li>
                                <li>
                                    <button class="dropdown-item @(activeTab == tagsManagementTab ? "active" : "")"
                                            @onclick="() => SetActiveTab(tagsManagementTab)" type="button">
                                        <i class="bi bi-tags me-2"></i>
                                        Tags Management
                                        <span class="badge bg-secondary ms-2">@tagCount</span>
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Tab Content -->
                    <div class="card-body p-0">
                        <div class="tab-content">
                            @if (activeTab == settingsTab)
                            {
                                <div class="tab-pane fade show active p-2 p-md-4">
                                    <AgentSettingsTab AgentId="Id" />
                                </div>
                            }
                            else if (activeTab == documentsTab)
                            {
                                <div class="tab-pane fade show active p-0">
                                    <div class="row g-0">
                                        <div class="col-md-3 border-end">
                                            <TreeFolder AgentId="Id" 
                                                       OnFolderSelected="HandleFolderSelected" 
                                                       OnAddKnowledgeRequested="HandleAddKnowledgeRequested" />
                                        </div>
                                        <div class="col-md-9 p-2 p-md-4">
                                            @if (selectedFolderId.HasValue)
                                            {
                                                <DocumentsTab @ref="documentsTabRef"
                                                             AgentId="Id" 
                                                             @bind-DocumentCount="documentCount" 
                                                             FolderId="selectedFolderId"
                                                             OpenAddKnowledgeDialogOnLoad="openAddKnowledgeDialog" />
                                            }
                                            else
                                            {
                                                <div class="text-center py-5">
                                                    <div class="mb-3">
                                                        <i class="bi bi-folder-symlink text-muted" style="font-size: 4rem;"></i>
                                                    </div>
                                                    <h5 class="text-muted">Please select a folder</h5>
                                                    <p class="text-muted">Select a folder from the left panel to view its documents</p>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            } 
                            else if (activeTab == tagsManagementTab)
                            {
                                <TagManagementTab />
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (showSidebar)
        {
            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Agent Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <small class="text-muted">Agent ID</small>
                            <div class="font-monospace small">@agentDetail.Id</div>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">Name</small>
                            <div>@agentDetail.Name</div>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">Status</small>
                            <div><span class="badge bg-success">Active</span></div>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">Created</small>
                            <div>January 15, 2024</div>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">Last Modified</small>
                            <div>2 hours ago</div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    [Parameter]
    public Guid Id { get; set; }
    private AgentDetail? agentDetail;
    private bool isLoading = true;
    private bool showSidebar = false;

    private const string settingsTab = "settings";
    private const string documentsTab = "documents";
    private const string tagsManagementTab = "tagsmanagement";
    private string activeTab = settingsTab;
    private int documentCount = 0;
    private int tagCount = 0;
    private Guid? selectedFolderId;
    private DocumentsTab? documentsTabRef;
    private bool openAddKnowledgeDialog = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;
            agentDetail = await AgentClient.GetAgentDetails(Id);
            if (agentDetail == null)
            {
                Navigation.NavigateTo("/agents");
            }
            else
            {
                await LoadTagCount();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading agent details");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadTagCount()
    {
        try
        {
            var tags = await TagClient.GetTagsAsync();
            tagCount = tags.Count;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading tag count");
        }
    }

    private void SetActiveTab(string tab)
    {
        activeTab = tab;
    }

    private void HandleFolderSelected(Guid? folderId)
    {
        selectedFolderId = folderId;
        StateHasChanged();
    }

    private void HandleAddKnowledgeRequested(Guid? folderId)
    {
        if (folderId.HasValue)
        {
            if (selectedFolderId == folderId && documentsTabRef != null)
            {
                documentsTabRef.OpenAddKnowledgeDialog();
            }
            else
            {
                selectedFolderId = folderId;
                openAddKnowledgeDialog = true;
                StateHasChanged();
            }
        }
    }
}

