@page "/token-usage"
@using NTG.Agent.Common.Dtos.TokenUsage
@using NTG.Agent.Admin.Client.Services
@attribute [Authorize(Roles = "Admin")]
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))
@inject NavigationManager Navigation
@inject ILogger<TokenUsageManagement> Logger
@inject TokenUsageClient TokenUsageClient

<PageTitle>Token Usage Tracking</PageTitle>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <div class="container-fluid px-2 px-md-4 py-2 py-md-3">
        <div class="row mb-4">
            <div class="col-12">
                <h2 class="mb-3">
                    <i class="bi bi-graph-up me-2"></i>Token Usage Tracking
                </h2>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>@errorMessage
                        <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
                    </div>
                }

                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i>@successMessage
                        <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
                    </div>
                }
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="row g-3 mb-4">
            <div class="col-12 col-sm-6 col-md-4 col-xl-2">
                <div class="card border-0 bg-primary bg-opacity-10 h-100">
                    <div class="card-body text-center py-3">
                        <h5 class="text-primary mb-1">@stats?.TotalTokens?.ToString("N0")</h5>
                        <small class="text-muted">Total Tokens</small>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-4 col-xl-2">
                <div class="card border-0 bg-success bg-opacity-10 h-100">
                    <div class="card-body text-center py-3">
                        <h5 class="text-success mb-1">@stats?.TotalInputTokens?.ToString("N0")</h5>
                        <small class="text-muted">Input Tokens</small>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-4 col-xl-2">
                <div class="card border-0 bg-info bg-opacity-10 h-100">
                    <div class="card-body text-center py-3">
                        <h5 class="text-info mb-1">@stats?.TotalOutputTokens?.ToString("N0")</h5>
                        <small class="text-muted">Output Tokens</small>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-4 col-xl-2">
                <div class="card border-0 bg-warning bg-opacity-10 h-100">
                    <div class="card-body text-center py-3">
                        <h5 class="text-warning mb-1">$@stats?.TotalCost.ToString("N2")</h5>
                        <small class="text-muted">Total Cost</small>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-4 col-xl-2">
                <div class="card border-0 bg-secondary bg-opacity-10 h-100">
                    <div class="card-body text-center py-3">
                        <h5 class="text-secondary mb-1">@stats?.UniqueUsers.ToString("N0")</h5>
                        <small class="text-muted">Active Users</small>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-4 col-xl-2">
                <div class="card border-0 bg-dark bg-opacity-10 h-100">
                    <div class="card-body text-center py-3">
                        <h5 class="text-dark mb-1">@stats?.TotalCalls.ToString("N0")</h5>
                        <small class="text-muted">API Calls</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filters Section -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-12 col-md-6 col-lg-3">
                        <label class="form-label">From Date</label>
                        <input type="date" class="form-control" @bind="fromDate" @bind:event="oninput" @onchange="ApplyFilters" />
                    </div>
                    <div class="col-12 col-md-6 col-lg-3">
                        <label class="form-label">To Date</label>
                        <input type="date" class="form-control" @bind="toDate" @bind:event="oninput" @onchange="ApplyFilters" />
                    </div>
                    <div class="col-12 col-md-6 col-lg-4">
                        <label class="form-label">View</label>
                        <select class="form-select" @bind="selectedView" @bind:after="ChangeView">
                            <option value="users">By Users</option>
                            <option value="history">Usage History</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        @if (selectedView == "users")
        {
            <!-- By Users View -->
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Token Usage by User</h5>
                </div>
                <div class="card-body">
                    <!-- Desktop Table -->
                    <div class="table-responsive d-none d-md-block">
                        <table class="table table-striped table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>User</th>
                                    <th class="text-end">Total Tokens</th>
                                    <th class="text-end">Input Tokens</th>
                                    <th class="text-end">Output Tokens</th>
                                    <th class="text-end">Cost</th>
                                    <th class="text-center">Conversations</th>
                                    <th>Last Activity</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (userStats?.Any() == true)
                                {
                                    @foreach (var user in userStats)
                                    {
                                        <tr>
                                            <td>
                                                @if (user.IsAnonymous)
                                                {
                                                    <span class="badge bg-secondary">@user.Email</span>
                                                }
                                                else
                                                {
                                                    <span>@user.Email</span>
                                                }
                                            </td>
                                            <td class="text-end"><strong>@user.TotalTokens?.ToString("N0")</strong></td>
                                            <td class="text-end">@user.TotalInputTokens?.ToString("N0")</td>
                                            <td class="text-end">@user.TotalOutputTokens?.ToString("N0")</td>
                                            <td class="text-end">$@user.TotalCost.ToString("N2")</td>
                                            <td class="text-center">@user.ConversationCount</td>
                                            <td>@user.LastActivity.ToString("MMM dd, yyyy HH:mm")</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center text-muted">No usage data available</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Mobile Cards -->
                    <div class="d-block d-md-none">
                        @if (userStats?.Any() == true)
                        {
                            @foreach (var user in userStats)
                            {
                                <div class="card mb-3 border">
                                    <div class="card-body">
                                        <div class="row g-2 mt-2">
                                            <div class="col-6">
                                                <small class="text-muted">Total Tokens:</small>
                                                <div><strong>@user.TotalTokens?.ToString("N0")</strong></div>
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted">Cost:</small>
                                                <div>$@user.TotalCost.ToString("N2")</div>
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted">Conversations:</small>
                                                <div>@user.ConversationCount</div>
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted">Last Activity:</small>
                                                <div>@user.LastActivity.ToString("MMM dd, yyyy")</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-center text-muted">No usage data available</p>
                        }
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Usage History View -->
            <div class="card shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Usage History</h5>
                    <span class="badge bg-secondary">@usageHistory?.TotalCount.ToString("N0") records</span>
                </div>
                <div class="card-body">
                    <!-- Desktop Table -->
                    <div class="table-responsive d-none d-md-block">
                        <table class="table table-striped table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Date</th>
                                    <th>User</th>
                                    <th>Agent</th>
                                    <th>Model</th>
                                    <th>Operation</th>
                                    <th class="text-end">Tokens</th>
                                    <th class="text-end">Cost</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (usageHistory?.Items?.Any() == true)
                                {
                                    @foreach (var item in usageHistory.Items)
                                    {
                                        <tr>
                                            <td>@item.CreatedAt.ToString("MMM dd, HH:mm")</td>
                                            <td>
                                                @if (string.IsNullOrEmpty(item.UserEmail))
                                                {
                                                    <span class="badge bg-secondary">Anonymous Session @item.SessionId?.ToString().Substring(0, 8)</span>
                                                }
                                                else
                                                {
                                                    <span>@item.UserEmail</span>
                                                }
                                            </td>
                                            <td>@item.AgentName</td>
                                            <td><span class="badge bg-info">@item.ModelName</span></td>
                                            <td>@item.OperationType</td>
                                            <td class="text-end">@item.TotalTokens?.ToString("N0")</td>
                                            <td class="text-end">$@(item.TotalCost?.ToString("N4") ?? "0.00")</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="8" class="text-center text-muted">No usage history available</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Mobile Cards -->
                    <div class="d-block d-md-none">
                        @if (usageHistory?.Items?.Any() == true)
                        {
                            @foreach (var item in usageHistory.Items)
                            {
                                <div class="card mb-3 border">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between mb-2">
                                            <small class="text-muted">@item.CreatedAt.ToString("MMM dd, HH:mm")</small>
                                            <span class="badge bg-info">@item.ModelName</span>
                                        </div>
                                        <div class="mb-2">
                                            <small class="text-muted">User:</small>
                                            <div>
                                                @if (string.IsNullOrEmpty(item.UserEmail))
                                                {
                                                    <span class="badge bg-secondary">Anonymous Session @(item.SessionId is Guid sid ? sid.ToString()[..8] : "Unknown")</span>
                                                }
                                                else
                                                {
                                                    <span>@item.UserEmail</span>
                                                }
                                            </div>
                                        </div>
                                        <div class="row g-2 mt-2">
                                            <div class="col-6">
                                                <small class="text-muted">Agent:</small>
                                                <div>@item.AgentName</div>
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted">Operation:</small>
                                                <div>@item.OperationType</div>
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted">Tokens:</small>
                                                <div><strong>@item.TotalTokens?.ToString("N0")</strong></div>
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted">Cost:</small>
                                                <div>$@(item.TotalCost?.ToString("N4") ?? "0.00")</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-center text-muted">No usage history available</p>
                        }
                    </div>

                    <!-- Pagination -->
                    @if (usageHistory?.TotalPages > 1)
                    {
                        <nav aria-label="Page navigation" class="mt-3">
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                    <button class="page-link" @onclick="() => ChangePage(currentPage - 1)">Previous</button>
                                </li>
                                @for (int i = 1; i <= usageHistory.TotalPages; i++)
                                {
                                    int pageNum = i;
                                    <li class="page-item @(currentPage == pageNum ? "active" : "")">
                                        <button class="page-link" @onclick="() => ChangePage(pageNum)">@pageNum</button>
                                    </li>
                                }
                                <li class="page-item @(currentPage == usageHistory.TotalPages ? "disabled" : "")">
                                    <button class="page-link" @onclick="() => ChangePage(currentPage + 1)">Next</button>
                                </li>
                            </ul>
                        </nav>
                    }
                </div>
            </div>
        }
    </div>
}

@code {
    private bool isLoading = true;
    private string? errorMessage;
    private string? successMessage;

    private TokenUsageStatsDto? stats;
    private List<UserTokenStatsDto>? userStats;
    private PagedResult<TokenUsageDto>? usageHistory;

    private DateTime? fromDate;
    private DateTime? toDate;
    private string selectedView = "users";
    private int currentPage = 1;
    private readonly int pageSize = 20;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            isLoading = true;
            errorMessage = null;

            // Load statistics
            stats = await TokenUsageClient.GetStatsAsync(fromDate, toDate);

            // Load view-specific data
            if (selectedView == "users")
            {
                await LoadUserStats();
            }
            else
            {
                await LoadUsageHistory();
            }
        }
        catch (OperationCanceledException)
        {
             throw;
        }
        catch (HttpRequestException ex)
        {
            Logger.LogError(ex, "Error loading token usage data");
            errorMessage = "Failed to load token usage data. Please check your network connection and try again.";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadUserStats()
    {
        try
        {
            userStats = await TokenUsageClient.GetUserStatsAsync(fromDate, toDate);
        }
        catch (OperationCanceledException)
        {
             throw;
        }
         catch (HttpRequestException ex)
        {
            Logger.LogError(ex, "Error loading user stats");
            errorMessage = "Failed to load user statistics. Please check your network connection and try again.";
        }
    }

    private async Task LoadUsageHistory()
    {
        try
        {
            usageHistory = await TokenUsageClient.GetUsageHistoryAsync(currentPage, pageSize, fromDate, toDate);
        }
        catch (OperationCanceledException)
        {
             throw;
        }
        catch (HttpRequestException ex)
        {
            Logger.LogError(ex, "Error loading usage history");
            errorMessage = "Failed to load usage history. Please check your network connection and try again.";
        }
    }

    private async Task ApplyFilters()
    {
        currentPage = 1;
        await LoadData();
    }

    private async Task ChangeView()
    {
        currentPage = 1;
        await LoadData();
    }

    private async Task ChangePage(int page)
    {
        if (page < 1 || (usageHistory != null && page > usageHistory.TotalPages))
            return;

        currentPage = page;
        await LoadUsageHistory();
    }
}
